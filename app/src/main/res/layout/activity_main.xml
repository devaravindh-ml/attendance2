<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_gradient_start"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AUROVILLE INSTITUTE OF APPLIED TECHNOLOGY"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLASS PERFORMANCE TRACKING SYSTEM"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_role_selector"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.55">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Your Role"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="8dp"
                android:layout_marginBottom="24dp" />

            <Button
                android:id="@+id/btn_student_login"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Student Login"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/green_button"
                android:drawableStart="@drawable/ic_student"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginBottom="12dp"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/btn_teacher_login"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Teacher Login"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/blue_button"
                android:drawableStart="@drawable/ic_teacher"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginBottom="12dp"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/btn_admin_login"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Admin Login"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/orange_button"
                android:drawableStart="@drawable/ic_admin"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>